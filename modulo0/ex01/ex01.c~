#include <stdio.h>

void main(int){

  printf("Storage size for char: %u\n", sizeof(char));

  printf("Storage size for int: %i\n", sizeof(int));

  printf("Storage size for unsigned int: %u\n", sizeof(unsigned int));

  printf("Storage size for long: %u\n", sizeof(long));

  printf("Storage size for short: %u\n", sizeof(short));

  printf("Storage size for long long: %u\n", sizeof(long long));

  printf("Storage size for float: %f\n", sizeof(float));

  printf("Storage size for double: %f\n", sizeof(double));

  return 0;
}

	 
