#include <stdio.h>
#include "calculator.h"

int op1 = 0, op2 = 0, choice;

int main(){

  printf("\n----- CALCULATOR -----\n");

  printf("Menu \n1. Addiction\n2. Subtraction\n3. Multiplication\n4. Division\n5. Modulus\n6. Power of 2\n7. Power of 3\n8. Exit");

  printf("\nEnter the operation\n");
  scanf("%d", &choice);

  switch(choice){

    //Addiction
  case 1 :

      printf("\nVal 1: ");
      scanf("%d", &op1);

      printf("\nVal 2: ");
      scanf("%d", &op2);

      printf("\nRes = %d", calculator());

      break;

      //Subtraction
  case 2 :
	
      printf("\nVal 1: ");
      scanf("%d", &op1);

      printf("\nVal 2: ");
      scanf("%d", &op2);

      printf("\nRes = %d", calculator());

      break;

      //Multiplication
  case 3 :

	
      printf("\nVal 1: ");
      scanf("%d", &op1);

      printf("\nVal 2: ");
      scanf("%d", &op2);

      printf("\nRes = %d", calculator());

      break;

      //Division
  case 4 :

      printf("\nVal 1: ");
      scanf("%d", &op1);

      printf("\nVal 2: ");
      scanf("%d", &op2);

      printf("\nRes = %d", calculator());

      break;

      //Modulus
  case 5 :

    printf("\nVal 1: ");
    scanf("%d", &op1);

    if(op1 < 0){

      printf("\nRes = %d", calculator());
      
    }else{

      printf("Res = %d\n", op1);
    }
      break;

      //Power_of_2
  case 6 :

      printf("\nVal 1: ");
      scanf("%d", &op1);

      printf("\nRes = %d", calculator());

      break;

      //Power_of_3
  case 7 :

      printf("\nVal 1: ");
      scanf("%d", &op1);

      printf("\nRes = %d", calculator());

      break;

      //End
  case 8 :

	printf("\nEnd\n");

	break;
  }
  
  return 0;
}
